<h1>Edit your league below:</h1>

<%= form_for(@league) do |f| %>

  <div class="field">
    <%= f.label :league %><br>
    <%= f.text_field :league %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>

  <div class="field">
    <%= f.label :team %><br>
    <%= f.text_area :team %>
  </div>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<p><a href="/leagues">Cancel</a></p>