


<div class="row">
  <div class="large-12 columns">
  <h4 class="left"><%= @league.league %></h4>

<% if user_signed_in? && current_user.leagues.collect(&:id).include?(@league.id)%>
    <%= form_tag("/favorites/#{@league.id}", remote: true, method: "delete") do %>
      <%= hidden_field_tag :type, "League" %>
      <%= button_tag'', class: "unfav-button" %>
<% end %>
<% else user_signed_in?%>
    <%= form_tag("/favorites", remote: true) do %>
      <%= hidden_field_tag :id, @league.id %>
      <%= hidden_field_tag :type, "League" %>
      <%= button_tag'', class: "fav-button" %>
<% end %>
<% end %>



 



  
</div>
<div class="large-4 columns padding">
          <table>
          <tr>
            <th>Team</th>
            <th>Rank</th>
            <th>Played</th>
            <th>Points</th>
          </tr>
          <% @league.teams.each do |league| %>
          <tr>
            <td><a href="<%= team_path(league.slug) %>"><%= league.name %></a></td>
            <td><%= league.rank %></td>
          </tr>
          <% end %>
        </table>
  </div>
  
