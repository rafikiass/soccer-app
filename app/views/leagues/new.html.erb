<h1>Please enter a new league:</h1>

<%= simple_form_for @league do |f| %>
<div class="row">
  <div class="large-4 columns">
    <%= f.input :league, placeholder: 'League name'%>
    <%= f.input :country, collection: ["England", "Germany", "Italy", "Spain"] %>
    <%= f.button :submit, :class => 'button small red-text-buttons'%>
<p class="button small red-text-buttons"><a href="/leagues">Cancel</a></p>
  </div>
  <% end %>
</div>

