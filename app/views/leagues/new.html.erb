<h1>Please enter a new league:</h1>

<%= form_for(@league) do |f| %>
<div class="row">
  <div class="field large-6 columns">
    <%= f.label :league %><br>
    <%= f.text_field :league %>
  </div>
</div>
<div class="row">
  <div class="field large-6 columns">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>
  </div>

<div class="row">
  <div class="field large-6 columns">
    <%= f.label :team %><br>
    <%= f.text_area :team %>
  </div>
</div>

<div class="row">
  <div class="actions large-6 columns">
    <%= f.submit %>
  </div>
  </div>
<% end %>
<div class="row">
<p><a href="/leagues" class="large-2 columns button tiny form-cancel-button">Cancel</a></p>
</div>