<h1>Please enter a new league:</h1>

<%= form_for(@team) do |f| %>
<div class="row">
  <div class="field large-6 columns">
    <%= f.label :rank %><br>
    <%= f.text_field :rank %>
  </div>
</div>
<div class="row">
  <div class="field large-6 columns">
    <%= f.label :team %><br>
    <%= f.text_field :team %>
  </div>
</div>
<div class="row">
  <div class="field large-6 columns">
    <%= f.label :manager %><br>
    <%= f.text_area :manager %>
  </div>
</div>
<div class="row">
  <div class="actions large-6 columns">
    <%= f.submit %>
  </div>
</div>
<% end %>

<div class="row">
<a href="/teams" class="large-2 columns button tiny form-cancel-button">Cancel</a>
</div>