      </div>
    </div>
    <!-- End of Defenders -->
    
    <!-- Midfielders -->
    <div class="large-12 columns">
      <h4>Midfield</h4>
    </div>

    <div class="large-12 columns">
      <div id="roster-header">
        <div class="large-3 large-offset-2 columns">
          <% @team.players.each do |player| %>
          <% if player.position == "Midfielder" %>
            <h6><%= player.name %></h6>
