<!-- headlines -->



<% @sbnation.entries[0..2].each do |entry| %>
  <div class="large-4 columns article-headers">
    <p><a href="<%= entry[:id] %>" target="_blank"><%= entry[:title] %></a></p>
  </div>
<% end %>

<% @sbnation.entries[0..2].each do |entry| %>
  <div class="large-4 columns article-headers-image">
  <a href="<%= entry[:id] %>" target="_blank"><img src="<%= entry[:content].match(/src="(\S*)"/)[1] %>" alt=""></a>
  </div>
<% end %>
 

<% headlines = @headlines["headlines"] %>
<% headlines[0..8].each do |headline| %>
  <% if headline["video"].any? %>
  <div class="large-5 columns image-margin">
    <video controls src="<%= headline["video"][0]["links"]["source"]["mezzanine"]["href"]  %>" width="100%" poster="<%= headline["video"][0]["posterImages"]["default"]["href"] %>">
    </video>
  </div>

  <% elsif headline["images"].any? %>
  <div class="large-5 columns image-margin">
    <img src="<%= headline["images"][0]["url"] %>" height="234" width="417" alt="">
  </div>
  <% end %>

  <% if headline["video"].any? || headline["images"].any? %>
<div class="large-3 columns article-margin">
<h5><a href="<%= headline["links"]["web"]["href"] %>" target="_blank"><%= headline["headline"] %></a></h5>
<p>by <%= headline["byline"] %></p>
  <p><a href="<%= headline["links"]["web"]["href"] %>" target="_blank"><%= headline["title"] %></a></p>
</div>

<div class="large-8 columns article-border">
  
</div>
<% end %>
<% end %>

<% @sbnation.entries[3..4].each do |entry| %>
<div class="large-5 columns image-margin">
  <img src="<%= entry[:content].match(/src="(\S*)"/)[1] %>" alt="">
</div>
<div class="large-3 columns sb-article-margin">
  
  <h5><a href="<%= entry[:id] %>" target="_blank"><%= entry[:title] %></a></h5>
  <p>by <%= entry[:author] %></p>
  <p><%= entry[:content].match(/p&gt;(\S.*)\./)[1] %>.</p>
</div>
<div class="large-8 columns article-border"></div>
<% end %>


