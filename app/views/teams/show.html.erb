            <% end %>
          <% end %>          
        </div>
      </div>
    </div>
    <!-- End of Midfield -->

    <!-- Forwards -->
    <div class="large-12 columns">
      <h4>Forwards</h4>
    </div>

    <div class="large-12 columns">
      <div id="roster-header">
        <div class="large-3 large-offset-2 columns">
          <% @team.players.each do |player| %>
          <% if player.position == "Forward" %>
            <h6><%= player.name %></h6>
